<p>ユーザー名検索</p>
<%= form_with(url: search_users_path, method: :get, local: true) do |f| %>
  <div class="input-group">
    <%= f.text_field :name, class: "form-control", placeholder: "キーワード検索" %>
    <span class="input-group-btn">
      <%= f.submit "検索", class: "btn btn-primary" %>
    </span>
  </div>
<% end %>
